{
    "compilerOptions":
    {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "importHelpers": true,
        "useDefineForClassFields": false,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "rootDir": ".",
        "outDir": "es2022",
        "paths":
        {
            "@anglr/common": ["./src/index.ts"],
            "@anglr/common/forms": ["./forms/src/index.ts"],
            "store/plugins/expire" : ["./typings/store/index.d.ts"],
        },
        "lib":
        [
            "ES2022",
            "dom"
        ],
        "plugins":
        [
            {
                "name": "@angular/language-service"
            }
        ]
    },
    "exclude":
    [
        "node_modules",
        "demo"
    ],
    "angularCompilerOptions":
    {
        "compilationMode": "partial",
        "enableResourceInlining": true,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true,
        "strictStandalone": true,
        "extendedDiagnostics":
        {
            "checks":
            {
                "interpolatedSignalNotInvoked": "error",
                "unusedStandaloneImports": "error",
                "uninvokedFunctionInEventBinding": "error",
                "missingControlFlowDirective": "error"
            }
        }
    }
}